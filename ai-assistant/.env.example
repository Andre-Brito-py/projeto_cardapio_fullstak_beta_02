# IA Liza - Configurações de Ambiente
# Copie este arquivo para .env e configure as variáveis

# === CONFIGURAÇÕES GERAIS ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# === CHAINLIT ===
CHAINLIT_HOST=localhost
CHAINLIT_PORT=8000
CHAINLIT_AUTH_SECRET=your-secret-key-here

# === API DO SISTEMA DE DELIVERY ===
DELIVERY_API_BASE_URL=http://localhost:3000/api
DELIVERY_API_TOKEN=your-api-token-here
DELIVERY_API_TIMEOUT=30

# === WHATSAPP BUSINESS API ===
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret

# === CONFIGURAÇÕES DE IA ===
# Modelo de classificação de intenções
INTENT_MODEL_PATH=./models/intent_classifier.pkl
INTENT_CONFIDENCE_THRESHOLD=0.7

# Configurações de resposta
MAX_RESPONSE_LENGTH=1000
DEFAULT_LANGUAGE=pt-BR
FALLBACK_TO_HUMAN=true

# === CACHE E SESSÃO ===
# Redis (opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Sessão em memória
SESSION_TIMEOUT=1800  # 30 minutos
MAX_SESSIONS=1000

# === CONFIGURAÇÕES DE LOJA ===
# Loja padrão para testes
DEFAULT_STORE_ID=1
DEFAULT_STORE_NAME="Loja Teste"

# === CONFIGURAÇÕES DE LOGGING ===
LOG_FILE_PATH=./logs/liza.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# === CONFIGURAÇÕES DE PERFORMANCE ===
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1

# === CONFIGURAÇÕES DE SEGURANÇA ===
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
API_RATE_LIMIT=100  # requests per minute

# === CONFIGURAÇÕES DE DESENVOLVIMENTO ===
AUTO_RELOAD=true
DEBUG_WEBHOOK=true
SAVE_CONVERSATION_HISTORY=true

# === CONFIGURAÇÕES OPCIONAIS ===
# Google Cloud (para Speech-to-Text, se necessário)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# OpenAI (para modelos avançados, se necessário)
# OPENAI_API_KEY=your-openai-api-key

# Groq (para modelos rápidos, se necessário)
# GROQ_API_KEY=your-groq-api-key